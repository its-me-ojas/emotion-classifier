FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY audio-emotion-insights-hub/package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the frontend application
COPY audio-emotion-insights-hub/ .

# Build the application
RUN npm run build

# Install serve to run the built application
RUN npm install -g serve

# Expose the port
EXPOSE 3000

# Run the application
CMD ["serve", "-s", "dist", "-l", "3000"] 